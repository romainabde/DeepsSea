// npx prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Species {
  id            Int        @id @default(autoincrement())
  authorId      Int
  rarityScore   Float      @default(0.0)
  name          String     @unique

  createdAt DateTime     @default(now())
  observations Observation[]
}

model Observation {
  id           Int       @id @default(autoincrement())
  speciesId    Int
  authorId     Int
  description  String
  status       Status     @default(PENDING)
  validatedBy  Int?
  validatedAt  DateTime?
  createdAt    DateTime   @default(now())
  deleted      Boolean    @default(false)
  deletedAt    DateTime?

  species  Species @relation(fields: [speciesId], references: [id])
  histories   ObservationHistory[]

  @@index([speciesId])
}

model ObservationHistory {
  id            Int          @id @default(autoincrement())
  observationId Int
  observation   Observation  @relation(fields: [observationId], references: [id])
  userId        Int
  action        String
  createdAt     DateTime     @default(now())
}

enum Status {
  PENDING
  VALIDATED
  REJECTED
}

enum Action{
    VALIDATED
    REJECTED
    DELETED
    RESTORED
}